<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header: University Name and Logo -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/university_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ju_logo"
            android:contentDescription="University Logo"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/university_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jahangirnagar_university"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Hall Name -->
    <TextView
        android:id="@+id/hall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:text="@string/bangabandhu_sheikh_mujibur_rahman_hall"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Student Picture -->
    <ImageView
        android:id="@+id/student_picture"
        android:layout_width="142dp"
        android:layout_height="191dp"
        android:layout_below="@id/hall_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_border"
        android:contentDescription="@string/student_picture"
        android:src="@drawable/student_pic" />

    <!-- Student Details -->
    <LinearLayout
        android:id="@+id/student_details"
        android:layout_width="393dp"
        android:layout_height="265dp"
        android:layout_below="@id/student_picture"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/md_mahfuzur_rahman"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/student_id_number_20200650774"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/batch_49"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/department_computer_science_and_engineering"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/validity_30_08_2025"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blood_group_b"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Registrar -->

    <!-- Barcode -->

    <TextView
        android:id="@+id/registrar_signature"
        android:layout_width="133dp"
        android:layout_height="33dp"
        android:layout_below="@id/student_details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="19dp"
        android:text="@string/registrar_signature"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/barcode"
        android:layout_width="226dp"
        android:layout_height="93dp"
        android:layout_below="@id/student_details"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/barcode"
        android:src="@drawable/barcode" />
</RelativeLayout>
